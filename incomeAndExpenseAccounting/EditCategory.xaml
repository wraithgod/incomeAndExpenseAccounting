<Window x:Class="incomeAndExpenseAccounting.EditCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:incomeAndExpenseAccounting"
        Title="Edit Category" Height="262" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Categories}" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,252" Grid.RowSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория" Binding="{Binding Name}" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="txtNewCategory" Width="200" Height="30" Margin="380,154,180,210" Grid.Row="2" />
        <Button Content="Добавить" Width="100" Height="30" Click="AddCategory_Click" Margin="598,154,62,210" Grid.Row="2" />

        <StackPanel Orientation="Horizontal" Margin="4,142,544,199" Grid.Row="2">
            <Button Content="Изменить" Width="100" Height="30" Margin="0,0,10,0" Click="EditCategory_Click" />
            
            <Button Content="Удалить" Width="100" Height="30" Click="DeleteCategory_Click" />
        </StackPanel>
    </Grid>
</Window>